        <Image x:Name="insti" Source="/Images/rwer.JPG" Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="5" Grid.RowSpan="5"></Image>


        <TextBlock Grid.Column="5" Grid.Row="4" Grid.ColumnSpan="10" Grid.RowSpan="6" x:Name="slidingBox" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Foreground="GhostWhite" TextWrapping="Wrap">
            <TextBlock.Triggers>
                <EventTrigger RoutedEvent="TextBlock.Loaded">
                    <BeginStoryboard>
                        <Storyboard RepeatBehavior="Forever" AutoReverse="False" Duration="0:0:45">
                            <StringAnimationUsingKeyFrames Storyboard.TargetProperty="Text">
                                <DiscreteStringKeyFrame KeyTime="0:0:1" Value="PokéFacts: Los Pokémon tipo fuego son débiles en contra del tipo: Agua, Tierra y Roca " />
                                <DiscreteStringKeyFrame KeyTime="0:0:15" Value="PokéFacts: Algunos Pokémon de este tipo evolucionan con una piedra evolutiva llamada piedra fuego, como Vulpix, Pansear y Growlithe, incluyendo a Eevee, que, a pesar de no ser tipo fuego, evoluciona a Flareon; que sí es de este tipo."/>
                                <DiscreteStringKeyFrame KeyTime="0:0:30" Value="PokéFacts: Existen 47 movimientos de tipo fuego (5,14 % del total)"/>
                            </StringAnimationUsingKeyFrames>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </TextBlock.Triggers>
        </TextBlock>

