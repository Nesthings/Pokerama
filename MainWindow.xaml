        <Grid Grid.Column="9" Grid.ColumnSpan="7" HorizontalAlignment="Left">
            <StackPanel HorizontalAlignment="Center" Margin="0,0,0,25" Orientation="Vertical">
                <Image x:Name="fire" Source="/Images/Tipo-Fuego-30-10-2023.png" Stretch="Fill" RenderTransformOrigin="0.555,2.595" Width="251" Height="61" IsEnabled="False">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="0.754"/>
                            <TranslateTransform X="-1.666" Y="0.171"/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
            </StackPanel>
